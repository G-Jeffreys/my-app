  visible,
  title,
  message,
  confirmText = 'Confirm',
  cancelText = 'Cancel',
  confirmColor = 'red',
  onConfirm,
  onCancel
}: ConfirmDialogProps) {
  
  const getConfirmButtonStyle = () => {
    switch (confirmColor) {
